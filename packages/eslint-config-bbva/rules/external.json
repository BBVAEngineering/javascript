{
  "plugins": ["decorator-position", "no-unsanitized", "optimize-regex"],
  "rules": {
    "decorator-position/decorator-position": [
      "error",
      {
        "methods": "above",
        "printWidth": 150,
        "properties": "prefer-inline"
      }
    ],
    "no-unsanitized/method": 2,
    "no-unsanitized/property": 2,
    "optimize-regex/optimize-regex": 1
  }
}
